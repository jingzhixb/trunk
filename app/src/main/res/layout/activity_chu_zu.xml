<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.ershoufang.ui.activity.WeiTuoActivity">

    <include layout="@layout/header"></include>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#0ba8ef"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWidth="20dp"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_dividerColor="#00ffffff"
        app:stl_underlineColor="#00ffffff"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="#999"
        app:stl_defaultTabTextSize="14sp"
        app:stl_defaultTabTextHorizontalPadding="0dp"
        app:stl_defaultTabTextMinWidth="85dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="100dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
