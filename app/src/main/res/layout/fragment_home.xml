<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:paddingTop="5dp"
        android:id="@+id/head"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="建德"
            android:id="@+id/dizhi"
            android:layout_width="50dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/dizhi"
            android:layout_marginTop="4dp"
            android:id="@+id/ditu"
            android:src="@drawable/ditu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/search"
            android:background="@drawable/shape_search"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/message"
            android:layout_toRightOf="@+id/ditu"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/search"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_centerInParent="true"
                android:text="搜索"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/message"
            android:src="@drawable/message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
<ScrollView android:scrollbars="none"
    android:layout_below="@+id/head"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fenleirv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        </android.support.v7.widget.RecyclerView>



        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_5"
            android:background="@color/line_color"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:id="@+id/message1"
                android:layout_marginLeft="15dp"
                android:src="@drawable/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/home_message"
                android:layout_toRightOf="@+id/message1"
                android:text="@string/app_name"
                android:textColor="#666"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/message_go"
                android:layout_marginLeft="15dp"
                android:src="@drawable/kaobei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:id="@+id/home_youhui"
                android:src="@drawable/huodong"
                android:layout_width="0dp"
                android:layout_height="66dp" />
            <ImageView
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:id="@+id/home_jingji"
                android:layout_marginLeft="1dp"
                android:src="@drawable/jingji"
                android:layout_width="0dp"
                android:layout_height="66dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:id="@+id/home_gangxu"
                android:src="@drawable/gangxu"
                android:layout_width="0dp"
                android:layout_height="66dp" />
            <ImageView
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:id="@+id/home_zhaoxiaoqu"
                android:layout_marginLeft="1dp"
                android:src="@drawable/xiaoqu"
                android:layout_width="0dp"
                android:layout_height="66dp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/line_color"></View>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="房产小工具"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/wenda"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/wenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房产问答"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/jisuan"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/jicuanqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房贷计算"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/qushi"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/qushi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房价趋势"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/gujia"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/gusuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="估算房价"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/line_color"></View>
        <!--<RelativeLayout-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:id="@+id/banner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="130dp"></RelativeLayout>-->

        <cn.bingoogolapple.bgabanner.BGABanner
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/banner"
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            app:banner_pointTopBottomMargin="5dp"
            app:banner_transitionEffect="alpha" />

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"

                android:src="@drawable/guess"
                android:layout_width="16dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐新房"/>

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tuijianxinfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"></View>
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/er"
                android:layout_width="16dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐二手房"/>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/tuijianershoufang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>
        <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"></View>
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hing"
                android:layout_width="16dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优秀经纪人"/>

            <TextView
                android:id="@+id/jinjikanmore"
                android:layout_toLeftOf="@+id/jingjiren_go"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:id="@+id/jingjiren_go"
                android:layout_marginLeft="15dp"
                android:src="@drawable/kaobei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/jingjiren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"></View>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/zu"
                android:layout_width="16dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐租房"/>

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tuijianzufang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"></View>
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guess"
                android:layout_width="16dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="猜你喜欢"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cainixihuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>



        <ImageView
            android:id="@+id/vote"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/t"/>

    </RelativeLayout>