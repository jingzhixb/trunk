<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.zhuye.ershoufang.ui.activity.me.AddChanPinActivity">


    <include layout="@layout/header"/>

    <RelativeLayout
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv2"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:id="@+id/dianhuowu"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mingcheng1"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:hint="产品名称"
            android:textSize="12sp"
            android:textColor="#999"
            android:textColorHint="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="10dp"
            android:hint="请输入产品名称"
            android:singleLine="true"
            android:maxLines="5"
            android:id="@+id/mingcheng"
            android:layout_toRightOf="@+id/mingcheng1"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:hint="产品简介"
            android:textSize="12sp"
            android:textColor="#999"
            android:textColorHint="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:lines="2"
            android:layout_marginTop="10dp"
            android:hint="请输入产品简介"
            android:singleLine="true"
            android:maxLines="5"
            android:id="@+id/jianjie"
            android:layout_toRightOf="@+id/mingcheng1"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/tijiao"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:text="发布"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>
