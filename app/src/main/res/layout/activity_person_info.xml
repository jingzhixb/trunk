<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.zhuye.ershoufang.ui.activity.PersonInfoActivity">

    <include layout="@layout/header"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="头像"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <com.zhuye.ershoufang.weidtet.RoundedCornerImageView
            android:src="@drawable/tuoyuan"
            android:clickable="false"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:layout_marginRight="18dp"
            android:id="@+id/touxing"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:text="昵称"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/shape_ju"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="m"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:layout_marginRight="18dp"
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:text="性别"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText

            android:paddingRight="@dimen/dp_10"
            android:text="男"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/shape_ju"
            android:id="@+id/sex"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:lines="1"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:text="账号"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/state"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:lines="1"
            android:layout_toLeftOf="@+id/go"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入售价"
            android:textSize="14sp"
            android:textColorHint="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="3dp"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:layout_marginRight="18dp"
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:id="@+id/edit"
            android:text="编辑"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:textColor="#fff"/>
    </RelativeLayout>
</LinearLayout>
