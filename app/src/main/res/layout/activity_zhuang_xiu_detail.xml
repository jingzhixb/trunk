<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhuye.ershoufang.ui.activity.home.ZhuangXiuDetailActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/back"
            android:src="@mipmap/jiantou"
            android:gravity="center"
            android:text="收藏"
            android:textColor="#999"
            android:textSize="@dimen/sp_15"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>



    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhuye.ershoufang.weidtet.RoundedCornerImageView
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/ttttt"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <RelativeLayout
            android:id="@+id/qijian"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <TextView

                android:layout_marginRight="80dp"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:id="@+id/name"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#666"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/jiatou"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_right"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#999"
                android:textSize="@dimen/sp_15"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <RelativeLayout
                android:layout_width="115dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/shoua"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/shou99"/>





                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/shoua"
                        android:gravity="center"
                        android:id="@+id/shoucang"
                        android:text="收藏"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/goutomg"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="立即沟通"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                <ImageView
                    android:layout_marginLeft="70dp"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/xiaoxi"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
