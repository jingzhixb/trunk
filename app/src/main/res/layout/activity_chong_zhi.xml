<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.ershoufang.ui.activity.MeChanPinActivity">

    <include layout="@layout/header"></include>


    <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        ></View>
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:text="支付方式"
        android:textSize="12sp"
        android:textColor="#999"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/alipay2"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/alipay"
            android:src="@drawable/alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/alipay"
            android:layout_marginLeft="10dp"
            android:text="支付宝"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/choose1"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/duihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/wexinpay2"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/weixin"
            android:src="@drawable/wechatpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/weixin"
            android:layout_marginLeft="10dp"
            android:text="微信"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/choose2"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/duihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/pay"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:text="立即支付"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>
