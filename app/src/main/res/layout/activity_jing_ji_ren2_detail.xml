<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.home.JingJiRen2DetailActivity">


    <include layout="@layout/header"></include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingTop="@dimen/dp_10"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="90dp">


                <com.zhuye.ershoufang.weidtet.RoundedCornerImageView
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/touxing"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/touxing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/app_name"/>

                    <com.hedgehog.ratingbar.RatingBar
                        android:id="@+id/ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        hedgehog:clickable="false"
                        hedgehog:halfstart="true"
                        hedgehog:starCount="5"
                        hedgehog:starEmpty="@drawable/star"
                        hedgehog:starFill="@drawable/star2"
                        hedgehog:starImageHeight="15dp"
                        hedgehog:starImageWidth="20dp"
                        hedgehog:starImagePadding="3dp"/>

                    <RatingBar
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/rb"
                        style="@style/RadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="15dp"
                        android:minHeight="15dp"
                        android:rating="3.0"
                        android:stepSize="0.5"
                        android:clickable="true"
                        android:isIndicator="true"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/dizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/app_name"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/fengxiang"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        android:text="分享"/>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/app_name"/>
                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12"
                        android:text="服务年限"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:id="@+id/gofangyuan"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="70dp">

                    <TextView
                        android:id="@+id/fangyuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15"
                        android:text="35"/>
                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12"
                        android:text="房源"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color">

            </View>
            <LinearLayout
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_12"
                    android:text="卖房宣言"/>
                <TextView
                    android:id="@+id/xuanyan"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    android:text="房源"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color">
            </View>
            <LinearLayout
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_12"
                    android:text="个人介绍"/>
                <TextView
                    android:id="@+id/jieshao"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    android:text="房源"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color">

            </View>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:paddingLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_12"
                            android:text="所属公司"/>
                        <TextView
                            android:id="@+id/gongsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:textSize="@dimen/sp_12"
                            android:text="服务年限"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:paddingLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_12"
                            android:text="主营业务"/>
                        <TextView
                            android:id="@+id/zhuying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:textSize="@dimen/sp_12"
                            android:text="服务年限"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:paddingLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_12"
                            android:text="主营小区"/>
                        <TextView
                            android:id="@+id/zhuyingxiaoqu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:textSize="@dimen/sp_12"
                            android:text="服务年限"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:paddingLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_12"
                            android:text="门店"/>
                        <TextView
                            android:id="@+id/mendian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:textSize="@dimen/sp_12"
                            android:text="服务年限"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:paddingLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="start"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textColor="#999"
                            android:textSize="@dimen/sp_12"
                            android:text="工作范围"/>
                        <TextView
                            android:id="@+id/gongzuofanwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:textSize="@dimen/sp_12"
                            android:text="服务年限"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color">
            </View>

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:visibility="gone"
                android:background="#fff"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorColor="#0ba8ef"
                app:stl_indicatorThickness="2dp"
                app:stl_indicatorWidth="20dp"
                app:stl_indicatorCornerRadius="2dp"
                app:stl_dividerColor="#00ffffff"
                app:stl_underlineColor="#00ffffff"
                app:stl_defaultTabTextAllCaps="false"
                app:stl_defaultTabTextColor="#999"
                app:stl_defaultTabTextSize="14sp"
                app:stl_defaultTabTextHorizontalPadding="0dp"
                app:stl_defaultTabTextMinWidth="170dp"
                app:stl_distributeEvenly="false"
                app:stl_clickable="true"
                app:stl_titleOffset="100dp"
                app:stl_drawDecorationAfterTab="false"
                />

            <android.support.v4.view.ViewPager
                android:visibility="gone"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v4.view.ViewPager>
        </LinearLayout>




</LinearLayout>