<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.zhuye.ershoufang.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/home_framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"></FrameLayout>


        <View
            android:visibility="gone"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <com.zhuye.ershoufang.weidtet.MyFragmentTabHost
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:id="@+id/home_fragmenttabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@android:id/content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></FrameLayout>
        </com.zhuye.ershoufang.weidtet.MyFragmentTabHost>
        
    </LinearLayout>
 

    <RelativeLayout

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/threeimg"
            android:layout_marginBottom="30dp"
           android:layout_centerHorizontal="true"
            android:src="@drawable/fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    
</RelativeLayout>
