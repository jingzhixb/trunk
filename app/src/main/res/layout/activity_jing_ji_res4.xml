<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.ershoufang.ui.activity.JingJiRes4Activity">


    <include layout="@layout/header"/>


    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/rrl"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poiont1"
                android:background="@drawable/shape_select"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />


            <View
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/poiont2"
                android:layout_toRightOf="@+id/poiont1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></View>

            <ImageView
                android:id="@+id/poiont2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_select"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <View
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/poiont3"
                android:layout_toRightOf="@+id/poiont2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></View>
            <ImageView
                android:id="@+id/poiont3"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_normal"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rrl"
            android:layout_marginTop="10dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/poiont4"
                android:text="填写手机号"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <!--<View-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:layout_toLeftOf="@+id/poiont5"-->
                <!--android:layout_toRightOf="@+id/poiont4"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ccc"></View>-->

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/poiont5"
                android:text="完善个人信息"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <!--<View-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toLeftOf="@+id/poiont6"-->
                <!--android:layout_toRightOf="@+id/poiont5"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ccc"></View>-->
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/poiont6"
                android:text="完成注册"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/types"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#333"
                android:text="上传身份证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@drawable/picture"
                android:id="@+id/shenfenzheng"
                android:layout_width="160dp"
                android:layout_height="80dp" />
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/next"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:text="完成"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>
</LinearLayout>
