<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include layout="@layout/header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/dianzhongliang"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#666"
                    android:id="@+id/zhongliang1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="楼栋门牌"
                    android:textSize="15sp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textColor="#666"
                        android:inputType="number"
                        android:singleLine="true"
                        android:lines="1"
                        android:id="@+id/dong"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请输入"
                        android:textSize="14sp"
                        android:textColorHint="#ccc"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text="栋/"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="8dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textColor="#666"
                        android:inputType="number"
                        android:singleLine="true"
                        android:lines="1"
                        android:id="@+id/danyuan"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请输入"
                        android:textSize="14sp"
                        android:textColorHint="#ccc"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text="单元/"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="8dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textColor="#666"
                        android:inputType="number"
                        android:singleLine="true"
                        android:lines="1"
                        android:id="@+id/shoujia"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请输入"
                        android:textSize="14sp"
                        android:textColorHint="#ccc"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text="室"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="18dp"
                        android:id="@+id/zhongliangwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#ddd"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/me"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#666"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="联系人姓名"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textColor="#666"
                    android:id="@+id/lianxiren"
                    android:layout_marginTop="10dp"
                    android:hint="请输入联系人姓名"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_toRightOf="@+id/mingcheng1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColorHint="#999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/linecolor"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>
            <LinearLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="联系人电话"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:textColorHint="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:inputType="number"
                    android:id="@+id/dianhua"
                    android:layout_marginTop="10dp"
                    android:hint="请输入联系人电话"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_toRightOf="@+id/mingcheng1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColorHint="#999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/linecolor"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>


            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="楼层"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <EditText
                        android:textColor="#666"
                        android:inputType="number"
                        android:singleLine="true"
                        android:lines="1"
                        android:id="@+id/jiceng"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请输入"
                        android:textSize="14sp"
                        android:textColorHint="#ccc"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text="层/共"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="18dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textColor="#666"
                        android:inputType="number"
                        android:singleLine="true"
                        android:lines="1"
                        android:id="@+id/gong"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请输入"
                        android:textSize="14sp"
                        android:textColorHint="#ccc"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:text="层"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#ddd"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/me"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </RelativeLayout>



            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="房屋类型"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:lines="1"
                    android:drawableRight="@drawable/sanjiao"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@drawable/shape_ju"
                    android:id="@+id/fangwuleixing"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="房屋类型"
                    android:singleLine="true"

                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColorHint="#ccc"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="装修类型"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:lines="1"
                    android:drawableRight="@drawable/sanjiao"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@drawable/shape_ju"
                    android:id="@+id/zhuangxiuleixing"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="装修类型"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColorHint="#ccc"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chaoxiang"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="朝向"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawableRight="@drawable/sanjiao"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:background="@drawable/shape_ju"
                    android:id="@+id/chaoxiang1"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="朝向"
                    android:singleLine="true"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColorHint="#ccc"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>
            </RelativeLayout>
            <com.zhuye.ershoufang.weidtet.MySelectPhotoView
                app:title = "室内图(最多上传6张)"
                app:addname="添加室内图"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jiaotong">
            </com.zhuye.ershoufang.weidtet.MySelectPhotoView>

            <RelativeLayout

                android:visibility="gone"
                android:id="@+id/diancheliang"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cheliang1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="室内图(最大传6张)"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:singleLine="true"
                    android:lines="1"
                    android:id="@+id/cheliang2"
                    android:layout_toRightOf="@+id/cheliang1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColorHint="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/neitu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text="视频"
                    android:textSize="15sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:visibility="gone"
                    android:background="@drawable/shape_tv"
                    android:id="@+id/shipin"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="装修类型"
                    android:singleLine="true"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:textColorHint="#ccc"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="43dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp">
                <Button
                    android:background="@drawable/shape_seek"
                    android:id="@+id/fabu"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="委托发布"
                    android:layout_width="335dp"
                    android:layout_height="35dp"
                    android:textSize="15sp"
                    android:textColor="#fff"/>
                <Button
                    android:background="@drawable/shape_seek"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/weituo"
                    android:text="提交委托"
                    android:layout_width="335dp"
                    android:layout_height="35dp"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
