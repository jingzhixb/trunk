<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#0ba8ef"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWidth="20dp"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_dividerColor="#00ffffff"
        app:stl_underlineColor="#00ffffff"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="#999"
        app:stl_defaultTabTextSize="14sp"
        app:stl_defaultTabTextHorizontalPadding="0dp"
        app:stl_defaultTabTextMinWidth="85dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="100dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>

