<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.ershoufang.ui.activity.home.MapZhaoFangActivity">


    <RelativeLayout
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerInside"
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xinfang"
                android:background="@drawable/shape_tuijian"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="新房"
                android:layout_width="75dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/ershoufang"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/shape_tuijian2"
                android:gravity="center"
                android:textColor="#fff"
                android:text="二手房"
                android:layout_width="75dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/zufang"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/shape_tuijian2"
                android:gravity="center"
                android:textColor="#fff"
                android:text="租房"
                android:layout_width="75dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <!--<com.ogaclejapan.smarttablayout.SmartTabLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"></com.ogaclejapan.smarttablayout.SmartTabLayout>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<com.baidu.mapapi.map.MapView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
        <!--</com.baidu.mapapi.map.MapView>-->

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

        <RelativeLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            
            <TextView
              android:id="@+id/quyu"
            android:textColor="#666"
            android:paddingLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="区域"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/shape_main"
            android:layout_width="100dp"
            android:layout_height="30dp" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/jiage"
                android:textColor="#666"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="价格"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_main"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/huxing"
                android:textColor="#666"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="房型"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/shape_main"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>

    <!--<android.support.v4.view.ViewPager-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</android.support.v4.view.ViewPager>-->
</LinearLayout>
