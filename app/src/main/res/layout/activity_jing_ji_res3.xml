    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/rrl"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poiont1"
                android:background="@drawable/shape_select"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />


            <View
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/poiont2"
                android:layout_toRightOf="@+id/poiont1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></View>

            <ImageView
                android:id="@+id/poiont2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_select"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <View
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/poiont3"
                android:layout_toRightOf="@+id/poiont2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></View>
            <ImageView
                android:id="@+id/poiont3"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_normal"
                android:layout_width="10dp"
                android:layout_height="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rrl"
            android:layout_marginTop="10dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/poiont4"
                android:text="填写手机号"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <!--<View-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:layout_toLeftOf="@+id/poiont5"-->
                <!--android:layout_toRightOf="@+id/poiont4"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ccc"></View>-->

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/poiont5"
                android:text="完善个人信息"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <!--<View-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toLeftOf="@+id/poiont6"-->
                <!--android:layout_toRightOf="@+id/poiont5"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#ccc"></View>-->
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/poiont6"
                android:text="完成注册"
                android:textColor="#666"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#333"
        android:text="真实姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="horizontal"
            android:layout_width="271dp"
            android:layout_height="20dp">

            <EditText
                android:textColor="#666"
                android:id="@+id/loginname"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:textColorHint="#999"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/ll1"
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
    </RelativeLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#333"
            android:text="身份证号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/card"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#333"
            android:hint="请填写身份证号"
            android:textColorHint="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#333"
                android:text="上传身份证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          
          
          <ImageView
              android:layout_marginTop="@dimen/dp_20"
              android:layout_marginLeft="@dimen/dp_15"
              android:scaleType="centerCrop"
              android:src="@drawable/picture"
              android:id="@+id/shenfenzheng"
              android:layout_width="160dp"
              android:layout_height="80dp" />

          <LinearLayout
              android:layout_marginLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

              <TextView
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="15dp"
                  android:gravity="center_horizontal"
                  android:textSize="15sp"
                  android:textColor="#999"
                  android:text="照片示例"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:layout_marginTop="6dp"
                  android:src="@drawable/shenfenxing"
                  android:layout_width="104dp"
                  android:layout_height="65dp" />

          </LinearLayout>
      </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:text="照片示例照片示例照片示例照片示例照片示例照片示例照片示例照片示例"
        android:textColor="#999"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/next"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:text="完成"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>
</LinearLayout>
