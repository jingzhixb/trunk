    <dimen name="actionBarSize">10dp</dimen>


    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:indeterminateDrawable">@drawable/rating</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:numColumns">5</item>
        <!--//这里放一些你觉得公共的属性(你可以在控件里覆盖这里的属性)-->
    </style>
